<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
            <stroke android:width="2dp" android:color="@android:color/white"/> <!-- Border color -->
            <corners android:radius="4dp"/> <!-- Optional: Rounded corners -->
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Inner background -->
        </shape>
    </item>
</layer-list>