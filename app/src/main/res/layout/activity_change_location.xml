<!-- res/layout/modal_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#80000000">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        >

        <!-- Header Layout -->
        <LinearLayout
            android:padding="8dp"
            android:background="@color/dark_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/topCloseButton"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close"
                android:src="@drawable/close" />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <!-- Adding weight to push the tick icon to the end -->
            <TextView
                android:id="@+id/changeLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="Move Asset"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/done"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tick_icon"
                android:contentDescription="Done"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Horizontal Container for EditText and Action Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/boardLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Asset Category"
                android:textColor="@color/white"
                 />
            <Spinner
                android:id="@+id/boardMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="5dp"
                android:backgroundTint="@color/primary"
                android:hint="Select category"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/listLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Location"
                android:textColor="@color/white" />

            <Spinner
                android:id="@+id/listMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="5dp"
                android:backgroundTint="@color/primary"
                android:hint="Select location"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
