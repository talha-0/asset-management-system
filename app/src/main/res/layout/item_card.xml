<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Asset Name -->
        <TextView
            android:id="@+id/cardName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Asset Name"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_options" />

        <!-- Options Icon -->
        <ImageView
            android:id="@+id/iv_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/options_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Asset Image -->
        <ImageView
            android:id="@+id/iv_card_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_board"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardName" />

        <!-- Asset ID -->
        <TextView
            android:id="@+id/tv_asset_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Asset ID: AS-001"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_card_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Asset Value -->
        <TextView
            android:id="@+id/tv_asset_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Value: $1,500.00"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_asset_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Asset Location -->
        <LinearLayout
            android:id="@+id/location_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_asset_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_location_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/list_icon" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Office 101"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Asset Status -->
        <TextView
            android:id="@+id/tv_asset_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status: In Use"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/location_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Asset Purchase Date -->
        <TextView
            android:id="@+id/tv_purchase_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Purchased: 15/05/2023"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_asset_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Assigned To -->
        <TextView
            android:id="@+id/tv_assigned_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Assigned To: John Smith"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_purchase_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_add_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ View Details"
            android:textColor="@color/primary"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_assigned_to"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- RecyclerView for assets -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_assets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_add_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
